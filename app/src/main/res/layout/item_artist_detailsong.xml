<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginStart="40dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="40dp"
    android:background="@drawable/background_item_song"
    android:backgroundTint="#CAC5C5">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgArtist"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/img_ariana" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Giới thiệu về nghệ sĩ"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="200dp"
            android:text="AlexLam"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="225dp"
            android:text="12.2N người nghe hàng tháng"
            android:textColor="@color/gray"
            android:textSize="12sp" />


        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginStart="210sp"
            android:layout_marginTop="205dp"
            android:background="@drawable/background_button_lyric"
            android:backgroundTint="#00FFFFFF"
            android:text="Theo dõi"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="250dp"
            android:text="LOS ANGLEES - SAIGON"
            android:textAllCaps="true"
            android:textColor="@color/gray"
            android:textSize="12sp" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>